{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@jspaste/frontend",
	"private": true,
	"license": "EUPL-1.2",
	"type": "module",
	"scripts": {
		"build": "bun run build:astro && bun run build:bundle",
		"build:astro": "bun astro build",
		"build:bundle": "bun build --target bun --splitting --minify --outdir ./dist/prod/ ./dist/astro/server/entry.mjs",
		"fix": "bun run fix:biome && bun run fix:package",
		"fix:biome": "bun biome check --apply .",
		"fix:package": "bun sort-package-json --quiet",
		"postinstall": "bun astro telemetry disable --silent",
		"lint": "bun run lint:biome && bun run lint:tsc",
		"lint:biome": "bun biome lint .",
		"lint:tsc": "bun tsc --noEmit",
		"start": "bun run build:astro && bun astro preview",
		"start:dev": "bun astro dev"
	},
	"dependencies": {
		"@astrojs/node": "~8.2.5",
		"@astrojs/solid-js": "~4.1.0",
		"@types/bun": "~1.1.0",
		"@zag-js/solid": "~0.47.0",
		"@zag-js/tooltip": "~0.47.0",
		"astro": "~4.6.3",
		"solid-js": "~1.8.16",
		"typescript": "~5.4.5"
	},
	"devDependencies": {
		"@astrojs/ts-plugin": "~1.6.1",
		"@biomejs/biome": "~1.7.0",
		"lefthook": "~1.6.10",
		"sort-package-json": "~2.10.0"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"esbuild",
		"lefthook",
		"sharp"
	]
}
