{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@jspaste/frontend",
	"private": true,
	"license": "EUPL-1.2",
	"type": "module",
	"scripts": {
		"build": "bun run build:astro",
		"build:astro": "bun astro build",
		"build:standalone": "bun run build:astro && bun run build.standalone.ts",
		"fix": "bun run fix:biome && bun run fix:package",
		"fix:biome": "bun biome check --write",
		"fix:package": "bun sort-package-json --quiet",
		"postinstall": "bun astro telemetry disable --silent",
		"lint": "bun run lint:biome && bun run lint:tsc",
		"lint:biome": "bun biome lint",
		"lint:tsc": "bun tsc --noEmit",
		"start": "bun run build:astro && bun astro preview",
		"start:dev": "bun astro dev"
	},
	"dependencies": {
		"@astrojs/check": "~0.7.0",
		"@astrojs/node": "~8.3.1",
		"@astrojs/preact": "~3.5.0",
		"@astrojs/tailwind": "~5.1.0",
		"@fontsource-variable/red-hat-mono": "~5.0.19",
		"@fontsource-variable/red-hat-text": "~5.0.19",
		"@playform/compress": "~0.0.13",
		"@playform/inline": "~0.0.7",
		"@types/bun": "~1.1.4",
		"@uiw/react-codemirror": "~4.22.2",
		"astro": "~4.10.3",
		"preact": "~10.22.0",
		"react-icons": "~5.2.1",
		"tailwindcss": "~3.4.4",
		"typescript": "~5.4.5",
		"vite-plugin-pwa": "~0.20.0"
	},
	"devDependencies": {
		"@biomejs/biome": "~1.8.1",
		"lefthook": "~1.6.16",
		"sort-package-json": "~2.10.0"
	},
	"overrides": {
		"react": "npm:@preact/compat@latest",
		"react-dom": "npm:@preact/compat@latest"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"lefthook"
	]
}
