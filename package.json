{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@jspaste/frontend",
	"private": true,
	"license": "EUPL-1.2",
	"type": "module",
	"scripts": {
		"build": "bun run build:next",
		"build:next": "bun next build",
		"build:standalone": "NEXT_STANDALONE=true bun next build && bun run build.ts",
		"fix": "bun run fix:biome && bun run fix:package",
		"fix:biome": "bun biome check --write",
		"fix:package": "bun sort-package-json --quiet",
		"postinstall": "bun next telemetry disable",
		"lint": "bun run lint:biome && bun run lint:tsc",
		"lint:biome": "bun biome lint",
		"lint:tsc": "bun tsc --noEmit",
		"start": "bun run start:next",
		"start:dev": "bun next dev --turbo",
		"start:next": "bun run build:next && bun next start"
	},
	"dependencies": {
		"@chakra-ui/react": "~2.8.2",
		"@emotion/react": "~11.13.0",
		"@emotion/styled": "~11.13.0",
		"@swc/core": "~1.7.10",
		"@types/bun": "~1.1.6",
		"@types/lodash": "~4.17.7",
		"@types/react": "~18.3.3",
		"@types/react-dom": "~18.3.0",
		"@uiw/codemirror-extensions-hyper-link": "~4.23.0",
		"@uiw/codemirror-extensions-langs": "~4.23.0",
		"@uiw/codemirror-theme-vscode": "~4.23.0",
		"@uiw/codemirror-themes": "~4.23.0",
		"@uiw/react-codemirror": "~4.23.0",
		"autoprefixer": "~10.4.20",
		"critters": "~0.0.24",
		"highlight.js": "~11.10.0",
		"lodash": "~4.17.21",
		"next": "~14.2.5",
		"postcss": "~8.4.41",
		"react": "~18.3.1",
		"react-dom": "~18.3.1",
		"react-icons": "~5.2.1",
		"tailwindcss": "~3.4.9",
		"typescript": "~5.5.4",
		"zustand": "~4.5.4"
	},
	"devDependencies": {
		"@biomejs/biome": "~1.8.3",
		"lefthook": "~1.7.12",
		"sort-package-json": "~2.10.0"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"lefthook"
	]
}
