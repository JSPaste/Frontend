{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@jspaste/frontend",
	"private": true,
	"license": "EUPL-1.2",
	"type": "module",
	"scripts": {
		"build": "bun run build:astro",
		"build:astro": "bun astro build",
		"build:bundle": "bun run build:astro && bun build --target=bun --splitting --minify-whitespace --minify-syntax --outdir ./dist/prod/ ./dist/astro/server/entry.mjs",
		"fix": "bun run fix:biome && bun run fix:package",
		"fix:biome": "bun biome check --apply .",
		"fix:package": "bun sort-package-json --quiet",
		"postinstall": "bun astro telemetry disable --silent",
		"lint": "bun run lint:biome && bun run lint:tsc",
		"lint:biome": "bun biome lint .",
		"lint:tsc": "bun tsc --noEmit",
		"start": "bun run build:astro && bun astro preview",
		"start:dev": "bun astro dev"
	},
	"dependencies": {
		"@astrojs/check": "~0.6.0",
		"@astrojs/node": "~8.2.5",
		"@astrojs/react": "~3.3.4",
		"@chakra-ui/icons": "~2.1.1",
		"@chakra-ui/react": "~2.8.2",
		"@chakra-ui/system": "~2.6.2",
		"@monaco-editor/react": "~4.6.0",
		"@playform/compress": "~0.0.4",
		"@types/bun": "~1.1.1",
		"@types/react": "~18.3.1",
		"@types/react-dom": "~18.3.0",
		"astro": "~4.8.2",
		"astro-seo": "~0.8.3",
		"highlight.js": "~11.9.0",
		"million": "~3.0.6",
		"react": "~18.3.1",
		"react-dom": "~18.3.1",
		"react-icons": "~5.2.1",
		"sharp": "~0.33.3",
		"typescript": "~5.4.5",
		"vite-plugin-pwa": "~0.20.0",
		"zustand": "~4.5.2"
	},
	"devDependencies": {
		"@biomejs/biome": "~1.7.3",
		"lefthook": "~1.6.10",
		"sort-package-json": "~2.10.0"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"esbuild",
		"lefthook",
		"sharp"
	]
}
